{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "../", // Adjusted: relative to project root
    "outDir": "../dist", // Adjusted: relative to project root
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "vitest/globals"]
  },
  "include": [
    "../src/**/*.ts", // Adjusted
    "../tests/**/*.ts", // Adjusted
    "./vitest.config.ts", // This config file is now in 'config/'
    "./playwright.config.ts" // This config file is now in 'config/'
  ],
  "exclude": [
    "../node_modules", // Adjusted
    "../dist" // Adjusted
  ]
}
